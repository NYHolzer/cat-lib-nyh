<% if @books.present? %>
<table>
<td>Book Title</td><td>Description</td>
<% @books.each do |book| %>
    <tr><td><a href="/books/<%= book.id %>"><%= book.title %></a> </td>
    <td><%= book.description %></td>
<% end %>
<% else %>
<p>There are no Books containing the term(s): <%= params[:search] %>.</p>
<% end %>
</table>