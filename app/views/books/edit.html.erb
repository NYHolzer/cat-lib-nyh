
<h1>Edit <br> <%= @book.title%></h1>
<form action="/books/<%= @book.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <input type="text" size="100" name="title" value="<%= @book.title %>"><br>
  <textarea name="description" cols="100" rows="20"><%= @book.description %></textarea>
  <input type="submit" id="submit">
</form>